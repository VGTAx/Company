@model EmployeeModel

@{
    ViewData["Title"] = "View";
   
}

<h1>Удаление записи</h1>

<h3>Потвердите удаление следующей записи:</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Имя")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Фамилия")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Возраст")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Номер телефона")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Отдел")
        </dt>
        <dd class = "col-sm-10">
            <p>@ViewBag.Department</p>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-outline-danger btn-sm fw-bold" /> 
        <a asp-action="Details" asp-controller="Employee" class="btn btn-outline-secondary btn-sm fw-bold">Назад</a>
    </form>
</div>
