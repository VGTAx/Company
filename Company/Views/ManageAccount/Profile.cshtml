@model ProfileModel;
@{
    ViewData["Title"] = "Профиль";
}

<h3>@ViewData["Title"]</h3>
<div class="row partial w-100">
    <div class="col-md-4">
        <form id="profile-form" class="w-100" asp-action="Profile" asp-controller="ManageAccount" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 input-group">
                <input asp-for="Email" class="form-control" placeholder="Please choose your email." disabled />
                <div class="input-group-append">
                    <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                </div>
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Please enter your Name." />
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Phone" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Phone" class="form-label"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <button id="submitBtn" type="submit" class="btn btn-success fw-bold btnSend" disabled>Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}