@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Ошибка") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible statusMessage" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @Model
    </div>
}
else {
    var statusMessageClass = @ViewBag.StatusMessage.ToString().StartsWith("Ошибка") ? "danger" : "success";
    <div class="alert alert-@statusMessageClass alert-dismissible statusMessage" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        @ViewBag.StatusMessage
    </div>
}