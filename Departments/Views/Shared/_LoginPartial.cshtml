@using Microsoft.AspNetCore.Identity
@using Company.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
         <li class="nav-item">
             <a class="nav-link text-dark" asp-area="Identity"
             asp-page="/Account/Manage/Index" title="Manage">Привет,
             @User.Identity!.Name</a>
         </li>
         <li class="nav-item">
             <form class="form-inline" asp-page="/Account/Logout" 
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" asp-area="Identity" method="post" >
                 <button class="nav-link btn btn-link text-dark"type="submit">Выйти</button>
             </form>
         </li>
    } 
        
    else
    {
         <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Register" asp-action="Register">Регистрация</a>
         </li>
         <li class="nav-item">
             <a class="nav-link text-dark" asp-area="Identity"
             asp-page="/Account/Login">Вход</a>
         </li>
    }
   
</ul>